<Project>

  <ItemGroup>
    <!-- Common Analyzers -->
    <PackageReference Include="Microsoft.DotNet.Analyzers.Compatibility" Version="0.2.12-alpha">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="SecurityCodeScan" Version="3.5.4">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="SonarAnalyzer.CSharp" Version="8.18.0.27296">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="StyleCop.Analyzers" Version="1.2.0-beta.312">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
    <PackageReference Include="IDisposableAnalyzers" Version="3.4.9">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <!-- SourceLink -->
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.1.0-beta-21109-02">
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <!-- .NET Framework Reference Assemblies. -->
    <PackageReference Condition="!$(TargetFramework.StartsWith('netcoreapp')) AND !$(TargetFramework.StartsWith('netstandard')) AND '$(TargetFramework)' != 'net5.0'" Include="Microsoft.NETFramework.ReferenceAssemblies" Version="1.0.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
    <!-- Common .NET Dependency packages. -->
    <!-- for the command line. -->
    <PackageReference Include="System.CommandLine" Version="2.0.0-beta1.20574.7" Condition="'$(UseCommandLine)' != '' AND '$(UseCommandLine)' == 'true'" />
    <!-- Only reference this for .NET Framework < 4.7.2. -->
    <PackageReference Include="System.Runtime.InteropServices.RuntimeInformation" Condition="'$(TargetFramework)' != 'net40' AND '$(TargetFramework)' != 'net472' AND '$(TargetFramework)' != 'net48' AND $(TargetFramework.StartsWith('net4')) AND '$(UseRuntimeInformation)' != '' AND '$(UseRuntimeInformation)' == 'true'">
      <Version>4.3.0</Version>
    </PackageReference>
    <PackageReference Include="System.Text.Json" Version="5.0.1" Condition="'$(UseJsonPackage)' != '' AND '$(UseJsonPackage)' == 'true' AND '$(TargetFramework)' != 'netcoreapp3.0' AND '$(TargetFramework)' != 'netcoreapp3.1' AND '$(TargetFramework)' != 'net5.0'" />
    <!-- .NET Framework references. -->
    <Reference Include="System.Data.DataSetExtensions" Condition="$(TargetFramework.StartsWith('net4'))" />
    <Reference Include="System.IO.Compression" Condition="$(TargetFramework.StartsWith('net4')) AND '$(TargetFramework)' != 'net40'" />
    <Reference Include="System.IO.Compression.FileSystem" Condition="$(TargetFramework.StartsWith('net4')) AND '$(TargetFramework)' != 'net40'" />
    <Reference Include="System.Net.Http" Condition="$(TargetFramework.StartsWith('net4')) AND '$(TargetFramework)' != 'net40'" />
    <Reference Include="System.Windows.Forms" Condition="$(TargetFramework.StartsWith('net4')) AND '$(UseUIFramework)' != '' AND '$(UseUIFramework)' == 'true'" />
    <Reference Include="System.Xml" Condition="$(TargetFramework.StartsWith('net4'))" />
    <Reference Include="System.Xml.Linq" Condition="$(TargetFramework.StartsWith('net4'))" />
    <Reference Include="Microsoft.CSharp" Condition="$(TargetFramework.StartsWith('net4'))" />
    <!-- Optionally add the UI .NET SDK for Windows Desktop. -->
    <FrameworkReference Include="Microsoft.WindowsDesktop.App" Condition="!$(TargetFramework.StartsWith('net4')) AND !$(TargetFramework.StartsWith('netstandard')) AND !$(TargetFramework.StartsWith('netcoreapp2')) AND '$(UseUIFramework)' != '' AND '$(UseUIFramework)' == 'true'" />
  </ItemGroup>

</Project>
